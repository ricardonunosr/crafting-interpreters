    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "cppdbg",
            "preLaunchTask": "",
            "request": "launch",
            "program": "${workspaceFolder}/clox/build/clox",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/clox",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "environment-cd": "${workspaceRoot}",
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/Library/Developer/CommandLineTools/Library/PrivateFrameworks/LLDB.framework/lldb-mi"
        },
    ]
}